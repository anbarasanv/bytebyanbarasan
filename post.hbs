{{!< default}}

<main class="gh-main gh-outer">
    <div class="gh-inner">
        {{#post}}
            <div class="flex flex-col mb-16">
                <div class="mb-8">
                    {{#if feature_image}}
                        {{> "post-feature-image"}}
                    {{/if}}
                </div>
                <div class="flex flex-wrap gap-8 sm:gap-4 py-6 px-6">
                    <div class="flex gap-2 badge py-7 px-7 font-header md:text-2xl sm:text-sm bg-black text-white">
                        <span><i class="fa-solid fa-hashtag"></i></span>
                        {{#if primary_tag}}
                            <a href="{{primary_tag.url}}">{{primary_tag.name}}</a>                              
                        {{/if}}
                    </div>
                    <div class="badge py-7 px-7 bg-black text-white md:text-2xl sm:text-sm flex gap-2 font-header">
                        <span class=""><i class="fa-regular fa-user"></i></span>
                        {{#primary_author}}
                        <a href="{{url}}">{{name}}</a>
                        {{/primary_author}}
                    </div>
                    <div class="badge badge-outline md:text-2xl sm:text-xs flex gap-2 font-header py-6 px-6">
                        <span class=""><i class="fa-regular fa-calendar"></i></span>
                        <time class="" datetime="{{date format="YYYY-MM-DD"}}">{{date}}</time>
                    </div>
                    <div class="badge badge-outline md:text-2xl sm:text-sm flex gap-2 font-header py-6 px-6">
                        <span class=""><i class="fa-regular fa-clock"></i></span>
                        <span class="">{{reading_time minute="1 Min Read" minutes="% Min Read"}}</span>
                    </div>
                </div>
                <div class="w-[85%] py-6 px-6 ">
                    <h2 class="text-6xl font-header font-semibold ">{{title}}</h2>
                </div>
                {{#if custom_excerpt}}
                    <p class="px-6 pb-16 font-jetmono border-b border-dashed border-black">{{custom_excerpt}}</p>
                {{/if}}
            </div>
            <section id="post-content" class="gh-content gh-canvas">
                {{content}}
            </section>
            {{#if comments}}
                <div class="gh-comments gh-canvas">
                    <h2 class="gh-comments-title">{{comment_count empty="" single="comment" plural="comments"}}</h2>
                    {{comments title="" count=false}}
                </div>
            {{/if}}
            <div class="flex items-center justify-center font-header gap-[60%] my-8">
                <div class="gh-navigation-previous btn btn-outline text-xl">
                    {{#prev_post}}
                        <a class="gh-navigation-link" href="{{url}}">{{> "icons/long-left-arrow"}} Previous</a>
                    {{/prev_post}}
                </div>
                <div class="gh-navigation-next btn btn-outline text-xl">
                    {{#next_post}}
                        <a class="gh-navigation-link" href="{{url}}">Next {{> "icons/long-right-arrow"}}</a>
                    {{/next_post}}
                </div>
            </div>
        {{/post}}
    </div>
</main>